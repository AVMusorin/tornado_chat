CREATE TABLE chat (
	id SERIAL PRIMARY KEY,
	token VARCHAR(300) NOT NULL,
	ready BOOLEAN NOT NULL DEFAULT TRUE,
	last_message VARCHAR(1000),
	customer_asked BOOLEAN DEFAULT FALSE
	);

UPDATE chat SET ready = True WHERE id = 1;	

SELECT * FROM chat;

